<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="695dp"
    tools:context=".fragments.user_profile.Exit_Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#95D6DF">

        <TextView
            android:id="@+id/profile_main_textView"
            android:layout_width="158dp"
            android:layout_height="85dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="ВЫХОД"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/changing_button"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:backgroundTint="#3F51B5"
            android:onClick="changing_profile"
            android:text="Выйти"
            android:textSize="20sp"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/log_out_button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="96dp"
            android:backgroundTint="#3F51B5"
            android:onClick="logout"
            android:text="Выключить приложение"
            android:textSize="16sp"
            app:cornerRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/changing_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>